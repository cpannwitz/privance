// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Models
model AccountChange {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  issuedate DateTime?
  issuer    String?
  type      String?
  purpose   String?
  balance   Float?
  amount    Float?
  currency  String?
  Category  Category[] @relation("AccountChangeCategories", references: [id])
}

model Category {
  id             Int             @id @default(autoincrement())
  name           String
  accountChanges AccountChange[] @relation("AccountChangeCategories")
}
